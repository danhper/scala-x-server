# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           com.tuvistavie.xserver.frontend.controllers.Application.index

GET     /login                      com.tuvistavie.xserver.frontend.controllers.Application.login

POST    /doLogin                    com.tuvistavie.xserver.frontend.controllers.Application.doLogin

GET     /connect                    com.tuvistavie.xserver.frontend.controllers.Application.connect

GET     /test                       com.tuvistavie.xserver.frontend.controllers.Application.test

GET     /ws                         com.tuvistavie.xserver.frontend.controllers.Application.testWs

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
